<?xml version="1.0" encoding="utf-8" standalone="no"?>
<smartdz>
    <record id="dw_room_view_list" model="ir.ui.view">
        <field name="name">dw.room.view.list</field>
        <field name="model">dw.room</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="location_id"/>
                <field name="floor"/>
                <field name="capacity_number"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="dw_room_view_form" model="ir.ui.view">
        <field name="name">dw.room.view.form</field>
        <field name="model">dw.room</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"
                           statusbar_visible="free,reserved,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g Meeting room 1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="location_id"/>
                        <field name="floor"/>
                        <field name="capacity_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dw_room_view_search" model="ir.ui.view">
        <field name="name">dw.room.view.search</field>
        <field name="model">dw.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="floor"/>
                <field name="capacity_number"/>
            </search>
        </field>
    </record>

    <record id="dw_room_action" model="ir.actions.act_window">
        <field name="name">Room</field>
        <field name="res_model">dw.room</field>
        <field name="view_mode">list,form</field>
    </record>
</smartdz>
