<?xml version="1.0" encoding="utf-8" standalone="no"?>
<smartdz>
    <record id="dw_participant_role_view_list" model="ir.ui.view">
        <field name="name">dw.participant.role.view.list</field>
        <field name="model">dw.participant.role</field>
        <field name="arch" type="xml">
            <list duplicate="false" delete="false">
                <field name="name"/>
                <field name="description"/>
                <field name="is_system"/>
            </list>
        </field>
    </record>

    <record id="dw_participant_role_view_form" model="ir.ui.view">
        <field name="name">dw.participant.role.view.form</field>
        <field name="model">dw.participant.role</field>
        <field name="arch" type="xml">
            <form duplicate="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g Stakeholder"/>
                            <field name="is_system"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dw_participant_role_view_search" model="ir.ui.view">
        <field name="name">dw.participant.role.view.search</field>
        <field name="model">dw.participant.role</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="dw_participant_role_action" model="ir.actions.act_window">
        <field name="name">Participant role</field>
        <field name="res_model">dw.participant.role</field>
        <field name="view_mode">list,form</field>
    </record>
</smartdz>
