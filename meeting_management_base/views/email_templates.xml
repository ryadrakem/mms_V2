<?xml version="1.0" encoding="utf-8"?>
<smartdz>
        <!-- QWeb template for the PDF -->
        <template id="meeting_pv_pdf_2">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="m">
                    <t t-call="web.external_layout">
                        <div class="page" style="padding:20px;">
                            <h2>PV: <span t-field="m.name"/></h2>
                            <div t-field="m.pv"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <!-- Report definition -->
        <record id="meeting_pv_report_2" model="ir.actions.report">
            <field name="name">Meeting PV</field>
            <field name="model">dw.meeting</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">meeting_management_base.meeting_pv_pdf_2</field>
            <field name="report_file">meeting_management_base.meeting_pv_pdf_2</field>
            <field name="binding_model_id" ref="model_dw_meeting"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Email template -->
        <record id="email_template_meeting_pv" model="mail.template">
            <field name="name">Meeting PV Notification</field>
            <field name="model_id" ref="model_dw_participant"/>
            <field name="subject">PV of Meeting: {{ object.meeting_id.name }}</field>
            <field name="body_html" type="html">
                <p>Hello <strong>${object.name}</strong>,</p>
                <p>The meeting is finished. Please find the PV attached.</p>
                <p>Regards,</p>
            </field>
        </record>
