<?xml version="1.0" encoding="utf-8" standalone="no"?>
<smartdz>
    <record id="dw_meeting_type_view_list" model="ir.ui.view">
        <field name="name">dw.meeting.type.view.list</field>
        <field name="model">dw.meeting.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="dw_meeting_type_view_form" model="ir.ui.view">
        <field name="name">dw.meeting.type.view.form</field>
        <field name="model">dw.meeting.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g Presentation"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dw_meeting_type_view_search" model="ir.ui.view">
        <field name="name">dw.meeting.type.view.search</field>
        <field name="model">dw.meeting.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="dw_meeting_type_action" model="ir.actions.act_window">
        <field name="name">Meeting type</field>
        <field name="res_model">dw.meeting.type</field>
        <field name="view_mode">list,form</field>
    </record>
</smartdz>
