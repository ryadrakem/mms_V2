<smartdz>
    <record id="dw_reservation_view_list" model="ir.ui.view">
        <field name="name">dw.reservations.view.list</field>
        <field name="model">dw.reservations</field>
        <field name="arch" type="xml">
            <list duplicate="false" create="false" delete="false" edit="false" export_xlsx="0">
                <field name="name"/>
                <field name="meeting_plannification_id"/>
                <field name="room_id"/>
                <field name="equipment_ids" widget="many2many_tags"/>
                <field name="start_time"/>
                <field name="planned_end_time"/>
            </list>
        </field>
    </record>

    <record id="dw_reservation_view_form" model="ir.ui.view">
        <field name="name">dw.reservations.view.form</field>
        <field name="model">dw.reservations</field>
        <field name="arch" type="xml">
            <form duplicate="false" create="false" delete="false">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="meeting_plannification_id"/>
                        <field name="room_id"/>
                        <field name="equipment_ids" widget="many2many_tags"/>
                        <field name="start_time"/>
                        <field name="planned_end_time"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_dw_reservations_calendar" model="ir.ui.view">
        <field name="name">dw.reservations.calendar</field>
        <field name="model">dw.reservations</field>
        <field name="arch" type="xml">
            <calendar string="Reservations" date_start="start_time" date_stop="planned_end_time">
                <field name="name"/>
                <field name="room_id"/>
                <field name="equipment_ids"/>
            </calendar>
        </field>
    </record>
    <record id="dw_reservations_action" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="res_model">dw.reservations</field>
        <field name="view_mode">list,calendar</field>
    </record>
</smartdz>