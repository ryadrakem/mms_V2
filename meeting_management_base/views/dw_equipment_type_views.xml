<?xml version="1.0" encoding="utf-8" standalone="no"?>
<smartdz>
    <record id="dw_equipment_type_view_list" model="ir.ui.view">
        <field name="name">dw.equipment.type.view.list</field>
        <field name="model">dw.equipment.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>
    <record id="dw_equipment_type_view_form" model="ir.ui.view">
        <field name="name">dw.equipment.type.view.form</field>
        <field name="model">dw.equipment.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g Datashow"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="quantity"/>
                    </group>
                    <notebook>
                        <page string="Equipments">
                            <field name="equipement_ids" options='{"no_open": True, "no_create": True}'>

                                <list>
                                    <field name="name"/>
                                    <field name="serial_number"/>
                                    <field name="status"/>
                                    <field name="equipment_type_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dw_equipment_type_view_search" model="ir.ui.view">
        <field name="name">dw.equipment.type.view.search</field>
        <field name="model">dw.equipment.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
                <field name="quantity"/>
            </search>
        </field>
    </record>

    <record id="dw_equipment_type_action" model="ir.actions.act_window">
        <field name="name">Equipment type</field>
        <field name="res_model">dw.equipment.type</field>
        <field name="view_mode">list,form</field>
    </record>
</smartdz>
