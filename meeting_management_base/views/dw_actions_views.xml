<?xml version="1.0" encoding="utf-8" standalone="no"?>
<smartdz>
    <record id="dw_actions_view_list" model="ir.ui.view">
        <field name="name">dw.actions.view.list</field>
        <field name="model">dw.actions</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="assignee"/>
                <field name="priority"/>
                <field name="requirements" widget="many2many_tags"/>
                <field name="dead_line"/>
            </list>
        </field>
    </record>
    <record id="dw_actions_view_form" model="ir.ui.view">
        <field name="name">dw.actions.view.form</field>
        <field name="model">dw.actions</field>
        <field name="arch" type="xml">
            <form string="Action">
                <sheet>
                    <!-- Titre -->
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Action 01"/>
                        </h1>
                    </div>

                    <!-- Informations principales -->
                    <group>
                        <group>
                            <field name="assignee"/>
                            <field name="priority"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="dead_line"/>
                            <field name="meeting_id" readonly="1"/>
                        </group>
                    </group>
                    <!-- Sous-tÃ¢ches -->
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="assignee"/>
                                    <field name="priority"/>
                                    <field name="status"/>
                                    <field name="dead_line"/>
                                </list>
                            </field>
                        </page>
                        <page string="requirements">
                            <field name="requirements"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="dw_actions_view_search" model="ir.ui.view">
        <field name="name">dw.actions.view.search</field>
        <field name="model">dw.actions</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="assignee"/>
                <field name="priority"/>
            </search>
        </field>
    </record>

    <record id="dw_actions_action" model="ir.actions.act_window">
        <field name="name">Actions</field>
        <field name="res_model">dw.actions</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': 'meeting_id'}</field>
    </record>
</smartdz>
