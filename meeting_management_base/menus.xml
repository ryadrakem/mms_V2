    <!--              parent="menu_meeting_management"-->
    <!--              action="dw_meeting_session_action"-->
    <!--              sequence="40"/>-->

    <menuitem id="menu_meeting_summary"
              name="Meeting Summaries"
              parent="menu_meeting_management"
              action="action_meeting_summary"
              sequence="50"/>

    <!-- ========================================== -->
    <!-- ACTIONS & REQUIREMENTS -->
    <!-- ========================================== -->

    <menuitem id="menu_actions"
              name="Actions"
              parent="menu_meeting_management"
              action="dw_actions_action"
              sequence="60"/>

    <!--    <menuitem id="menu_requirements"-->
    <!--              name="Requirements"-->
    <!--              parent="menu_meeting_management"-->
    <!--              action="dw_requirements_action"-->
    <!--              sequence="70"/>-->

    <!-- ========================================== -->
    <!-- PEOPLE & CONTACTS -->
    <!-- ========================================== -->

    <menuitem id="menu_people"
              name="Employees &amp; Contacts"
              parent="menu_meeting_management"
              sequence="100"/>

    <!-- Contacts submenu -->
    <menuitem id="menu_contacts_submenu"
              name="Contacts"
              parent="menu_people"
              action="contacts.action_contacts"
              sequence="10"/>

    <!-- Employees submenu -->
    <menuitem id="menu_employees_submenu"
              name="Employees"
              parent="menu_people"
              action="hr.open_view_employee_list_my"
              sequence="20"/>

    <!-- Departments submenu -->
    <menuitem id="menu_departments_submenu"
              name="Departments"
              parent="menu_people"
              action="hr.hr_department_kanban_action"
              sequence="30"/>

    <!-- Job Positions submenu -->
    <menuitem id="menu_job_positions_submenu"
              name="Job Positions"
              parent="menu_people"
              action="hr.action_hr_job"
              sequence="40"/>

    <!-- ========================================== -->
    <!-- CONFIGURATION -->
    <!-- ========================================== -->

    <menuitem id="menu_meeting_settings"
              name="Configuration"
              parent="menu_meeting_management"
              sequence="200"/>

    <!-- Settings Submenu -->
    <menuitem id="menu_meeting_general_settings"
              name="Settings"
              parent="menu_meeting_settings"
              action="base.res_config_setting_act_window"
              sequence="5"/>

    <!-- Meeting Settings Submenu -->
    <menuitem id="menu_meeting_config"
              name="Meeting Settings"
              parent="menu_meeting_settings"
              sequence="10"/>

    <menuitem id="menu_meeting_types"
              name="Meeting Types"
              parent="menu_meeting_config"
              action="dw_meeting_type_action"
              sequence="10"/>

    <menuitem id="menu_participant_roles"
              name="Participant Roles"
              parent="menu_meeting_config"
              action="dw_participant_role_action"
              sequence="20"/>

