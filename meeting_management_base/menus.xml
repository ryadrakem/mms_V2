    <menuitem id="menu_resources_config"
              name="Resources"
              parent="menu_meeting_settings"
              sequence="20"/>

    <menuitem id="menu_locations"
              name="Locations"
              parent="menu_resources_config"
              action="dw_location_action"
              sequence="10"/>

    <menuitem id="menu_rooms"
              name="Rooms"
              parent="menu_resources_config"
              action="dw_room_action"
              sequence="20"/>

    <menuitem id="menu_equipments"
              name="Equipments"
              parent="menu_resources_config"
