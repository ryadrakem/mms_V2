<?xml version="1.0" encoding="utf-8"?>
<smartdz>
    <!-- ========================================== -->
    <!-- MAIN MENU -->
    <!-- ========================================== -->
    <menuitem id="menu_meeting_management"
              name="Meeting Management"
              web_icon="meeting_management_base,static/src/img/icon.png"
              sequence="1"/>

    <!-- ========================================== -->
    <!-- DASHBOARD & HOME -->
    <!-- ========================================== -->

    <!-- Analytics Dashboard -->
    <record id="action_dw_meeting_home" model="ir.actions.client">
        <field name="name">Meetings Dashboard</field>
        <field name="tag">dw_meeting.home</field>
        <field name="target">current</field>
    </record>

    <menuitem id="menu_dw_meeting_dashboard"
              name="Dashboard"
              parent="menu_meeting_management"
              action="action_dw_meeting_home"
              sequence="1"/>

    <!-- Home Page Dashboard -->
    <record id="action_meeting_home_dashboard" model="ir.actions.client">
        <field name="name">Meeting Home Dashboard</field>
        <field name="tag">meeting_management_base.meeting_home_dashboard_action</field>
    </record>

    <menuitem id="menu_meeting_home_dashboard"
              name="Home Page"
              parent="menu_meeting_management"
              action="action_meeting_home_dashboard"
              sequence="2"/>

    <!-- ========================================== -->
    <!-- MEETINGS SECTION -->
    <!-- ========================================== -->

    <menuitem id="menu_planification_meetings"
              name="Planification Meetings"
              parent="menu_meeting_management"
              action="dw_planification_meeting_action"
              sequence="9"/>

    <menuitem id="menu_actual_meetings"
              name="Meetings"
              parent="menu_meeting_management"
              action="dw_meeting_action"
              sequence="10"/>

    <!--    <menuitem id="menu_dw_meeting_session"-->
