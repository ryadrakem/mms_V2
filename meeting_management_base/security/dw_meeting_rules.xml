<smartdz>
    <data noupdate="1">

        <!-- Rule for regular users: only see planifications they are part of as participants -->
        <record id="dw_planification_meeting_participant_rule" model="ir.rule">
            <field name="name">Planification Meeting: Participant Only</field>
            <field name="model_id" ref="model_dw_planification_meeting"/>
            <field name="domain_force">[('participant_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Rule for managers: see all planifications -->
        <record id="dw_planification_meeting_manager_all_rule" model="ir.rule">
            <field name="name">Planification Meeting: Managers See All</field>
            <field name="model_id" ref="model_dw_planification_meeting"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Rule for regular users: only see meetings they participate in -->
        <record id="dw_meeting_participant_rule_2" model="ir.rule">
            <field name="name">Meeting: Participant Only</field>
            <field name="model_id" ref="model_dw_meeting"/>
            <field name="domain_force">[('participant_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Rule for managers: see all meetings -->
        <record id="dw_meeting_manager_all_rule_2" model="ir.rule">
            <field name="name">Meeting: Managers See All</field>
            <field name="model_id" ref="model_dw_meeting"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>


    </data>
</smartdz>